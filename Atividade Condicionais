/* faça um programa que o úsuario digite 2 pontuações */
/* caso a pontuação seja maior ou igual a 3500 */
/* exibirr aluno aprovado */
/* caso a pontuação seja menor que 3500 até 2000 */
/* exibir aluno vai fazer substitutiva */
/* caso a pontuação seja menor que 2000 */ 
/* exibir aluno reprovado */

#include <iostream>

int main() {
    int pontuacao1, pontuacao2;

    std::cout << "Digite a primeira pontuacao: ";
    std::cin >> pontuacao1;

    std::cout << "Digite a segunda pontuacao: ";
    std::cin >> pontuacao2;

    if (pontuacao1 >= 3500 && pontuacao2 >= 3500) {
        std::cout << "Aluno aprovado" << std::endl;
    } else if ((pontuacao1 < 3500 || pontuacao2 < 3500) && (pontuacao1 >= 2000 && pontuacao2 >= 2000)) {
        std::cout << "Aluno vai fazer substitutiva" << std::endl;
    } else {
        std::cout << "Aluno reprovado" << std::endl;
    }

    return 0;
}


/* faça um programa que  o úsuario digite um valor  e imprima a tabuada */
#include <iostream>

int main() {
    int valor;

    std::cout << "Digite um valor: ";
    std::cin >> valor;

    std::cout << "Tabuada de " << valor << ":" << std::endl;
    for (int i = 1; i <= 10; ++i) {
        std::cout << valor << " x " << i << " = " << valor * i << std::endl;
    }

    return 0;
}

